<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Event_Activity"
    android:orientation="vertical">
    <include android:id="@+id/eaToolbar"
        layout="@layout/toolbarlayout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginStart="34dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:padding="5dp"
            android:id="@+id/eaName_textInput"
            android:background="@drawable/custom_textinputlayout"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start time"
            android:layout_marginTop="5dp"
            android:layout_marginStart="34dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eaDateStart_textInput"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_textinputlayout"
                    android:padding="5dp"/>
                <ImageView
                    android:id="@+id/eaDateStart_dialog"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End time"
            android:layout_marginStart="34dp"
            android:layout_marginTop="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eaDateEnd_textInput"
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_textinputlayout"
                    android:padding="5dp" />
                <ImageView
                    android:id="@+id/eaDateEnd_dialog"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginStart="34dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:padding="5dp"
            android:id="@+id/eaLocation_textInput"
            android:background="@drawable/custom_textinputlayout"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:layout_marginStart="34dp"
            android:layout_marginTop="5dp"/>
        <include layout="@layout/custom_radiobutton"
            android:id="@+id/eaColor_radio"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:layout_marginStart="34dp"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/eaAddNotification_button"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:background="@drawable/custom_button2"
            android:text="Add notification" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginStart="34dp"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:padding="5dp"
            android:id="@+id/eaDescription_textInput"
            android:background="@drawable/custom_textinputlayout"/>

        <Button
            android:id="@+id/eaSave_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="34dp"
            android:background="@drawable/custom_button1"
            android:text="Save" />
    </LinearLayout>
</LinearLayout>
