<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Home_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Hi"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Hi, username!"
            android:fontFamily="@font/inria_sans"
            android:textSize="30sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView_CurrentDate"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="The current date"
            android:fontFamily="@font/inria_sans"
            android:textSize="20sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/textView_Notes"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Event and tasks today"
            android:fontFamily="@font/inria_sans"
            android:textSize="25sp"
            android:gravity="center_vertical"/>

        <!--GridView dùng để chứa các notices
            -->
        <GridView
            android:id="@+id/gridView_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="2"
            android:stretchMode="columnWidth"/>

    </LinearLayout>
</FrameLayout>